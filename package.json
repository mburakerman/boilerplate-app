{
  "name": "boilerplate-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "tsc && vite build --mode prod",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "intl:extract": "formatjs extract \"src/**/*.{ts,tsx}\" --ignore \"**/*.d.ts\" --out-file src/locales/extracted-messages.json",
    "intl:extract-simple": "formatjs extract \"src/**/*.{ts,tsx}\" --ignore \"**/*.d.ts\" --format simple --out-file src/locales/extracted-messages.json",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:open": "npx open-cli coverage/index.html",
    "e2e": "npx playwright install && npx playwright test",
    "e2e:debug": "npx playwright install && npx playwright test --debug"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@tanstack/react-query": "^5.90.5",
    "axios": "^1.13.1",
    "clsx": "^2.1.1",
    "http-status-codes": "^2.3.0",
    "nanoid": "^5.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.56.1",
    "react-intl": "^7.1.11",
    "react-router": "^6.30.3",
    "react-router-dom": "^6.30.3",
    "react-use": "^17.6.0",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@formatjs/cli": "^6.7.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.9.2",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "babel-plugin-formatjs": "^10.5.41",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-formatjs": "^4.13.3",
    "eslint-plugin-functional": "^6.5.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "vite": "^7.1.12",
    "vite-plugin-environment": "^1.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
